make-julia: configure-julia
	cd ${JULIA_DIR} ; \
		 ${__ENV__SET} ;\
		 PATH=${PATH}:${NLYTIQ_INST_PATH}/bin ;\
		 export PYTHON=${NLYTIQ_INST_PATH}/bin/python3 ;\
		 ${MAKECMD}  -j${NCPU} OPENBLAS_TARGET_ARCH=SANDYBRIDGE

	touch make-julia

install-julia: make-julia
	cd ${JULIA_DIR} ;  export PYTHON=${NLYTIQ_INST_PATH}/bin/python3 ;\
		${__ENV__SET} ${_EPF_} ${MAKECMD} install
	cd ${JULIA_DIR}/usr ; tar -cf - . | (cd ${JULIA_INST_PATH} && tar -xvf - )
	touch install-julia

